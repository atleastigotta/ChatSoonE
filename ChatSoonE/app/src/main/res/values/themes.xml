<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Template_Basic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->

        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Status bar, text color. -->
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- make status bar translucent(semitransparent) -->
        <item name="android:windowTranslucentStatus">false</item>

        <!-- draw status bar on background -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="l">true</item>

        <!-- apply full screen mode -->
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>