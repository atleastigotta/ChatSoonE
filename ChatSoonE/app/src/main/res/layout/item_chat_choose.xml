<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/item_chat_choose_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_chat_choose_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/item_chat_choose_profile_iv"
        app:layout_constraintStart_toEndOf="@+id/item_chat_choose_profile_iv" />
    
    <TextView
        android:id="@+id/item_chat_choose_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_chat_default"
        android:text="@string/message"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/item_chat_choose_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_chat_choose_name_tv" />

    <TextView
        android:id="@+id/item_chat_choose_date_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_time"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/item_chat_choose_message_tv"
        app:layout_constraintEnd_toEndOf="@+id/item_chat_choose_message_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>