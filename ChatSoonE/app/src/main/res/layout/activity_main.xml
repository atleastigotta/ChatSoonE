<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/main_setting_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_menu"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat_list"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/main_setting_iv"
        app:layout_constraintBottom_toBottomOf="@+id/main_setting_iv"
        app:layout_constraintStart_toEndOf="@+id/main_setting_iv" />

    <ImageView
        android:id="@+id/main_update_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/icon_update"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/main_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/main_title_tv"
        app:layout_constraintStart_toEndOf="@+id/main_title_tv" />

    <ImageView
        android:id="@+id/main_my_folder_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_folder"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/main_update_iv"
        app:layout_constraintBottom_toBottomOf="@+id/main_update_iv"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_chat_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        tools:listitem="@layout/item_chat_list"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/main_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/main_chat_list_folder_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_cloud_folder"
        android:background="@drawable/background_icon_folder"
        android:scaleType="fitXY"
        android:padding="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_chat_list_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/main_chat_list_recycler_view" />

</androidx.constraintlayout.widget.ConstraintLayout>