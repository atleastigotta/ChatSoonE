<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/splash_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="챗순이 아이콘"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ProgressBar
        android:id="@+id/splash_progressBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_main_text"
        android:layout_marginTop="20dp"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <TextView
        android:id="@+id/splash_enter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_progressBar"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:text="시작하기"
        android:textSize="30sp"
        android:background="#C5C5C5"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/splash_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_enter_btn"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:text="카카오톡 로그인"
        android:textSize="30sp"
        android:background="#C5C5C5"
        android:textColor="@color/black"
        />


</androidx.constraintlayout.widget.ConstraintLayout>