<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chat_soon_e.chat_soon_e">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.chat_soon_e.chat_soon_e.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Template_Basic">

        <activity
            android:name="com.chat_soon_e.chat_soon_e.ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.chat_soon_e.chat_soon_e.ui.LoginActivity"
            android:exported="true"/>

        <activity
            android:name="com.chat_soon_e.chat_soon_e.ui.SignUpActivity"
            android:exported="true"/>

        <activity
            android:name="com.chat_soon_e.chat_soon_e.ui.MainActivity"
            android:exported="true"/>

        <!-- NotificationListener 권한 얻기 -->
        <service android:name=".ui.MyNotificationListener"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>

</manifest>