<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/splash_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="챗순이 아이콘"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ProgressBar
        android:id="@+id/splash_progressBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_main_text"
        android:layout_marginTop="20dp"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/splash_start_btn_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_progressBar"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/splash_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:textSize="20sp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="8dp"
            android:background="#FEB3B0"
            android:textColor="@color/white"
            />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/splash_kakao_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_narrow"
        app:layout_constraintStart_toStartOf="@id/splash_start_btn_cv"
        app:layout_constraintEnd_toEndOf="@id/splash_start_btn_cv"
        app:layout_constraintTop_toBottomOf="@id/splash_start_btn_cv"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/splash_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴"
        app:layout_constraintStart_toStartOf="@id/splash_kakao_login_btn"
        app:layout_constraintEnd_toEndOf="@id/splash_kakao_login_btn"
        app:layout_constraintTop_toBottomOf="@id/splash_kakao_login_btn"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:padding="20dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>