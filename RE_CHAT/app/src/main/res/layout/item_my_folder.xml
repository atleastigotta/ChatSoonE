<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:id="@+id/item_my_folder"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_my_folder_iv"
        android:layout_width="102dp"
        android:layout_height="62dp"
        android:src="@drawable/chatsoon01"
        android:scaleType="fitCenter"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_my_folder_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_my_folder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/folder_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="visible"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/item_my_folder_iv"
        app:layout_constraintStart_toStartOf="@+id/item_my_folder_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_my_folder_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>